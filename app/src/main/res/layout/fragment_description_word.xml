<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/word_description_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.description.DescriptionWordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/description_action_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:background="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/description_toolbar_title"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/description_inner_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/inner_views_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_action_bar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/entity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="text" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_word_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/word_details_rv_item" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>